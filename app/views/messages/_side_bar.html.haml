.side_bar
  .side_box
    %p.side_name
      =current_user.name
    .side_icon
      =link_to new_group_path, class: "side_btn" do
        = icon('fas', 'edit')
      =link_to edit_user_path(current_user), class: "side_btn" do
        = icon('fas', 'cog')

  .groups
    - current_user.groups.each do |group|
      .group
        = link_to group_messages_path(group) do
          .group__name
            = group.name
          .group__message
